# Set up 

docker pull thyrlian/android-sdk

if [ ! -d AndroidSDK ]; then git clone https://github.com/thyrlian/AndroidSDK; fi

docker run -it --rm -v $(pwd)/AndroidSDK/sdk:/sdk thyrlian/android-sdk bash -c 'cp -a $ANDROID_HOME/. /sdk'

sudo chown -R $USER:users AndroidSDK/sdk

AndroidSDK/sdk/tools/bin/sdkmanager --update
AndroidSDK/sdk/tools/bin/sdkmanager                             \
  "build-tools;26.0.1"                               \
  "platforms;android-26"                             \
  "system-images;android-26;google_apis;x86_64"
